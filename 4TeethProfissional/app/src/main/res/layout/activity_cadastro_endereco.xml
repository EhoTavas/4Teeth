<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.4TeethProfissional"
    tools:context=".CadastroEndereco" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icNavegarVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_navegar_voltar" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/tituloTelas"
            android:text="@string/strAtendimento" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@drawable/border_rounded_login_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/TvEndereco1"
            style="@style/labelsMainScreen_LinearLayout"
            android:layout_marginTop="15dp"
            android:text="@string/strEndereco1" />

        <com.santalu.maskara.widget.MaskEditText
            style="@style/inputSignUp"
            android:hint="@string/strCep"
            android:inputType="textPostalAddress"
            app:mask="__.___-___" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strNumResidencia"
            android:inputType="textCapSentences" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strComplemento"
            android:inputType="textCapSentences" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strRua"
            android:inputType="textCapSentences" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strBairro"
            android:inputType="textCapSentences" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strCidade"
            android:inputType="textCapSentences" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strEstado" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside">

            <TextView
                android:id="@+id/TvAddAddress"
                style="@style/labelsMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/strAddAddress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icAddAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
