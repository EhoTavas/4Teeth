<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gelo_esverdeado"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvEndereco1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço 1:"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/EtEndereco1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvEndereco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço 2:"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/EtEndereco2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvEndereco3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço 3:"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/EtEndereco3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Complemento"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/icNavegarVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navegar_voltar"
        android:layout_margin="5dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>