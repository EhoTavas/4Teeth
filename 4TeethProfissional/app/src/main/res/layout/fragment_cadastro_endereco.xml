    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/LayoutAddresses"
            android:background="@drawable/border_rounded_login_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TvEndereco1"
                style="@style/labelsMainScreen_LinearLayout"
                android:layout_marginTop="15dp"
                android:text="@string/strAddress1" />

            <com.santalu.maskara.widget.MaskEditText
                style="@style/inputSignUp"
                android:id="@+id/EtCep1"
                android:autofillHints="postalCode"
                android:hint="@string/strZipCode"
                android:inputType="textPostalAddress|number"
                app:mask="_____-___"
                app:maskCharacter="_"
                app:maskStyle="completable" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtNum1"
                android:hint="@string/strAddressNumber"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtComp1"
                android:hint="@string/strComplement"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtStreet1"
                android:hint="@string/strRua"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtNh1"
                android:hint="@string/strNeighborhood"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtCity1"
                android:hint="@string/strCity"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/EtState1"
                style="@style/inputSignUp"
                android:hint="@string/strState"
                android:inputType="textCapSentences" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TvEndereco2"
                style="@style/labelsMainScreen_LinearLayout"
                android:layout_marginTop="15dp"
                android:text="@string/strAddress2" />

            <com.santalu.maskara.widget.MaskEditText
                style="@style/inputSignUp"
                android:id="@+id/EtCep2"
                android:autofillHints="postalCode"
                android:hint="@string/strZipCode"
                android:inputType="textPostalAddress|number"
                app:mask="_____-___"
                app:maskCharacter="_"
                app:maskStyle="completable" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtNum2"
                android:hint="@string/strAddressNumber"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtComp2"
                android:hint="@string/strComplement"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtStreet2"
                android:hint="@string/strRua"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtNh2"
                android:hint="@string/strNeighborhood"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtCity2"
                android:hint="@string/strCity"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtState2"
                android:hint="@string/strState"
                android:inputType="textCapSentences" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TvEndereco3"
                style="@style/labelsMainScreen_LinearLayout"
                android:layout_marginTop="15dp"
                android:text="@string/strAddress3" />

            <com.santalu.maskara.widget.MaskEditText
                style="@style/inputSignUp"
                android:id="@+id/EtCep3"
                android:autofillHints="postalCode"
                android:hint="@string/strZipCode"
                android:inputType="textPostalAddress|number"
                app:mask="_____-___"
                app:maskCharacter="_"
                app:maskStyle="completable" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtNum3"
                android:hint="@string/strAddressNumber"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtComp3"
                android:hint="@string/strComplement"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtStreet3"
                android:hint="@string/strRua"
                android:inputType="textCapSentences" />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/inputSignUp"
                android:id="@+id/EtNh3"
                android:hint="@string/strNeighborhood"
