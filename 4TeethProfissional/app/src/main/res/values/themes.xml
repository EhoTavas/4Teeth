<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.4TeethProfissional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gelo_esverdeado</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gelo_esverdeado</item>
        <item name="android:fontFamily">@font/poppins_family</item>
        <item name="android:navigationBarColor">@color/azul_gelo</item>
        <item name="android:windowLightStatusBar">@color/black</item>
    </style>

    <style name="Theme.4TeethProfissional.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="fragmentsBackground" parent="Theme.4TeethProfissional">
        <item name="android:windowBackground">@color/azul_gelo</item>
    </style>

    <style name="Theme.4TeethProfissional.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.4TeethProfissional.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>