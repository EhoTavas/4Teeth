<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.4TeethProfissional"
    tools:context=".CadastroEndereco" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icNavegarVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_navegar_voltar" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/tituloTelas"
            android:text="@string/strAtendimento" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@drawable/border_rounded_login_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/TvEndereco1"
            style="@style/labelsMainScreen"
            android:layout_marginTop="15dp"
            android:text="@string/strEndereco1" />

        <com.santalu.maskara.widget.MaskEditText
            style="@style/inputSignUp"
            android:hint="@string/strCep"
            app:mask="__.___-___"/>
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strNumResidencia" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strComplemento" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strRua" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strBairro" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strCidade" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strEstado" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/TvEndereco2"
            style="@style/labelsMainScreen"
            android:text="@string/strEndereco2" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strRua" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strComplemento" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/TvEndereco3"
            style="@style/labelsMainScreen"
            android:text="@string/strEndereco3" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strRua" />
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/inputSignUp"
            android:hint="@string/strComplemento" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/btnConfirm"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>