<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login_screen"
    android:orientation="vertical"
    android:theme="@style/Theme.4TeethProfissional"
    tools:context=".screens.login.LoginFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/availableEmergencies"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:background="@drawable/container_menu"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="50dp"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="90dp"
            android:contentDescription="@string/clientImageDescription"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/tooth_3d_45"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/strAvailableEmergencies"
            android:textColor="@color/black"
            android:textSize="25sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/attendedEmergencies"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:background="@drawable/container_menu"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="50dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/imgTooth3"
            android:layout_width="90dp"
            android:contentDescription="@string/clientImageDescription"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/tooth_3d_45"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/strAttendedEmergencies"
            android:textColor="@color/black"
            android:textSize="25sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/serviceAddresses"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:background="@drawable/container_menu"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="50dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/imgTooth4"
            android:layout_width="90dp"
            android:contentDescription="@string/clientImageDescription"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/tooth_3d_45"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/strServiceAddresses"
            android:textColor="@color/black"
            android:textSize="25sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>